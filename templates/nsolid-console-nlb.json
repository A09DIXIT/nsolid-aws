{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS with Network Load Balancer",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-01b0e1328ff2a154b"
      },
      "us-east-2": {
        "AMI": "ami-03adf81df8096a29c"
      },
      "us-west-1": {
        "AMI": "ami-0341ec5b8e5adec54"
      },
      "us-west-2": {
        "AMI": "ami-0de5db4eb6ecabbfd"
      },
      "ca-central-1": {
        "AMI": "ami-01a7ce951ce7c4ece"
      },
      "eu-central-1": {
        "AMI": "ami-05da556dd9e15d38a"
      },
      "eu-west-1": {
        "AMI": "ami-03c18a056ec89b943"
      },
      "eu-west-2": {
        "AMI": "ami-0b39b9419366ed9e8"
      },
      "eu-west-3": {
        "AMI": "ami-030051726478c7f97"
      },
      "ap-northeast-1": {
        "AMI": "ami-09ec06bacb36888b8"
      },
      "ap-northeast-2": {
        "AMI": "ami-048474375fa41bf7b"
      },
      "ap-southeast-1": {
        "AMI": "ami-0aed08725c2a78ad5"
      },
      "ap-southeast-2": {
        "AMI": "ami-03788e8f2cef6c939"
      },
      "ap-south-1": {
        "AMI": "ami-065641b6e2b8036c1"
      },
      "sa-east-1": {
        "AMI": "ami-0e753ebe8a6608a7c"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "LoadBalancerSubnets": {
      "Description": "Subnet IDs for the Load Balancer",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "VPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console Instance",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
      "Properties": {
        "Name": "NSolid-Console",
        "Scheme": "internet-facing",
        "Subnets": {
          "Ref": "LoadBalancerSubnets"
        },
        "Type": "network"
      }
    },
    "TargetGroup80": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-80",
        "HealthCheckIntervalSeconds": 10,
        "HealthCheckPort": 80,
        "HealthCheckProtocol": "TCP",
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Port": 80,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9001": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9001",
        "HealthCheckIntervalSeconds": 10,
        "HealthCheckPort": 9001,
        "HealthCheckProtocol": "TCP",
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Port": 9001,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9002": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9002",
        "HealthCheckIntervalSeconds": 10,
        "HealthCheckPort": 9002,
        "HealthCheckProtocol": "TCP",
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Port": 9002,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9003": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9003",
        "HealthCheckIntervalSeconds": 10,
        "HealthCheckPort": 9003,
        "HealthCheckProtocol": "TCP",
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Port": 9003,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "Listener80": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup80"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 80,
        "Protocol": "TCP"
      }
    },
    "Listener9001": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9001"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9001,
        "Protocol": "TCP"
      }
    },
    "Listener9002": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9002"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9002,
        "Protocol": "TCP"
      }
    },
    "Listener9003": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9003"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9003,
        "Protocol": "TCP"
      }
    },
    "AutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "DependsOn": [
        "TargetGroup80",
        "TargetGroup9001",
        "TargetGroup9002",
        "TargetGroup9003"
      ],
      "Properties": {
        "VPCZoneIdentifier": {
          "Ref": "LoadBalancerSubnets"
        },
        "TargetGroupARNs": [
          {
            "Ref": "TargetGroup80"
          },
          {
            "Ref": "TargetGroup9001"
          },
          {
            "Ref": "TargetGroup9002"
          },
          {
            "Ref": "TargetGroup9003"
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "ConsoleInstance"
        },
        "MinSize": "1",
        "MaxSize": "1",
        "DesiredCapacity": "1",
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console",
            "PropagateAtLaunch": "True"
          }
        ]
      }
    },
    "ConsoleInstance": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        }
      }
    }
  },
  "Outputs": {
    "ConsoleURL": {
      "Description": "DNS Name of Load Balancer",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Fn::GetAtt": [
          "LoadBalancer",
          "DNSName"
        ]
      }
    }
  }
}
