{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS with Network Load Balancer",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-03d5e03bd873cde13"
      },
      "us-east-2": {
        "AMI": "ami-0522e14af18b99cbc"
      },
      "us-west-1": {
        "AMI": "ami-04cfb3a769bf0b31f"
      },
      "us-west-2": {
        "AMI": "ami-036a6d352a4d69d77"
      },
      "ca-central-1": {
        "AMI": "ami-019e25e3b6fc8631d"
      },
      "eu-central-1": {
        "AMI": "ami-04ae2f7b497343635"
      },
      "eu-west-1": {
        "AMI": "ami-05922231b603ded4d"
      },
      "eu-west-2": {
        "AMI": "ami-0ca7f237b03d3e368"
      },
      "eu-west-3": {
        "AMI": "ami-0d24745e09729da42"
      },
      "ap-northeast-1": {
        "AMI": "ami-0d8c772fcb1f5a8b5"
      },
      "ap-northeast-2": {
        "AMI": "ami-0122b3f84f77f7e23"
      },
      "ap-southeast-1": {
        "AMI": "ami-09f2b7d53a5276e26"
      },
      "ap-southeast-2": {
        "AMI": "ami-0b97c26b19482ea88"
      },
      "ap-south-1": {
        "AMI": "ami-07b80e22ad8a2fdab"
      },
      "sa-east-1": {
        "AMI": "ami-07b5988ff8fae9889"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "LoadBalancerSubnets": {
      "Description": "Subnet IDs for the Load Balancer",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "VPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console Instance",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
      "Properties": {
        "Name": "NSolid-Console",
        "Scheme": "internet-facing",
        "Subnets": {
          "Ref": "LoadBalancerSubnets"
        },
        "Type": "network"
      }
    },
    "TargetGroup80": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-80",
        "HealthCheckIntervalSeconds": 10,
        "HealthCheckPort": 80,
        "HealthCheckProtocol": "TCP",
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Port": 80,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9001": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9001",
        "HealthCheckIntervalSeconds": 10,
        "HealthCheckPort": 9001,
        "HealthCheckProtocol": "TCP",
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Port": 9001,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9002": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9002",
        "HealthCheckIntervalSeconds": 10,
        "HealthCheckPort": 9002,
        "HealthCheckProtocol": "TCP",
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Port": 9002,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9003": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9003",
        "HealthCheckIntervalSeconds": 10,
        "HealthCheckPort": 9003,
        "HealthCheckProtocol": "TCP",
        "HealthyThresholdCount": 3,
        "UnhealthyThresholdCount": 3,
        "Port": 9003,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "Listener80": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup80"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 80,
        "Protocol": "TCP"
      }
    },
    "Listener9001": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9001"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9001,
        "Protocol": "TCP"
      }
    },
    "Listener9002": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9002"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9002,
        "Protocol": "TCP"
      }
    },
    "Listener9003": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9003"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9003,
        "Protocol": "TCP"
      }
    },
    "AutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "DependsOn": [
        "TargetGroup80",
        "TargetGroup9001",
        "TargetGroup9002",
        "TargetGroup9003"
      ],
      "Properties": {
        "VPCZoneIdentifier": {
          "Ref": "LoadBalancerSubnets"
        },
        "TargetGroupARNs": [
          {
            "Ref": "TargetGroup80"
          },
          {
            "Ref": "TargetGroup9001"
          },
          {
            "Ref": "TargetGroup9002"
          },
          {
            "Ref": "TargetGroup9003"
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "ConsoleInstance"
        },
        "MinSize": "1",
        "MaxSize": "1",
        "DesiredCapacity": "1",
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console",
            "PropagateAtLaunch": "True"
          }
        ]
      }
    },
    "ConsoleInstance": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        }
      }
    }
  },
  "Outputs": {
    "ConsoleURL": {
      "Description": "DNS Name of Load Balancer",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Fn::GetAtt": [
          "LoadBalancer",
          "DNSName"
        ]
      }
    }
  }
}
