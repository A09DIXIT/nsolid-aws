{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS ECS",
  "Parameters": {
    "ClusterName": {
      "Description": "Name of new ECS Cluster",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "HostSubnet": {
      "Description": "Subnet to put the ECS Host in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "Subnets": {
      "Description": "Subnet IDs for the Load Balancer",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "VPC": {
      "Description": "VPC ID that contains the Subnets",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ecs.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "elasticloadbalancing:DeregisterInstancesFromLoadBalancer",
                    "elasticloadbalancing:DeregisterTargets",
                    "elasticloadbalancing:Describe*",
                    "elasticloadbalancing:RegisterInstancesWithLoadBalancer",
                    "elasticloadbalancing:RegisterTargets"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ],
              "Version": "2012-10-17"
            },
            "PolicyName": "NSolid-Console-Service-Policy"
          }
        ],
        "RoleName": "NSolid-Console-Service-Role"
      }
    },
    "TaskRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ecs-tasks.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": [
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                }
              ],
              "Version": "2012-10-17"
            },
            "PolicyName": "NSolid-Console-Task-Policy"
          }
        ],
        "RoleName": "NSolid-Console-Task-Role"
      }
    },
    "HostSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Cluster-Hosts",
        "GroupDescription": "Security Group for NSolid ECS Cluster Hosts",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "31000",
            "ToPort": "61000"
          }
        ],
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "Cluster": {
      "Type": "AWS::ECS::Cluster",
      "Properties": {
        "ClusterName": {
          "Ref": "ClusterName"
        }
      }
    },
    "ClusterAutoScalingGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "VPCZoneIdentifier": {
          "Ref": "Subnets"
        },
        "LaunchConfigurationName": "NSolid-Cluster-Instances",
        "MinSize": "1",
        "MaxSize": "1",
        "DesiredCapacity": "1"
      }
    },
    "ClusterInstances": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Properties": {
        "ImageId": {
          "Fn::FindInMap": [
            "AWSRegionToAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMIID"
          ]
        },
        "SecurityGroups": [
          {
            "Ref": "HostSecurityGroup"
          }
        ],
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash -xe\n",
                "echo ECS_CLUSTER=",
                {
                  "Ref": "ClusterName"
                },
                " >> /etc/ecs/ecs.config\n"
              ]
            ]
          }
        }
      }
    },
    "LoadBalancer": {
      "Type": "AWS::ElasticLoadBalancingV2::LoadBalancer",
      "Properties": {
        "Name": "NSolid-Console",
        "Scheme": "internet-facing",
        "Subnets": {
          "Ref": "Subnets"
        },
        "Type": "network"
      }
    },
    "TargetGroup6753": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-6753",
        "Port": 6753,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9001": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9001",
        "Port": 9001,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9002": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9002",
        "Port": 9002,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "TargetGroup9003": {
      "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
      "Properties": {
        "Name": "nsolid-console-9003",
        "Port": 9003,
        "Protocol": "TCP",
        "VpcId": {
          "Ref": "VPC"
        }
      }
    },
    "Listener80": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup6753"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 80,
        "Protocol": "TCP"
      }
    },
    "Listener9001": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9001"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9001,
        "Protocol": "TCP"
      }
    },
    "Listener9002": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9002"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9002,
        "Protocol": "TCP"
      }
    },
    "Listener9003": {
      "Type": "AWS::ElasticLoadBalancingV2::Listener",
      "Properties": {
        "DefaultActions": [
          {
            "TargetGroupArn": {
              "Ref": "TargetGroup9003"
            },
            "Type": "forward"
          }
        ],
        "LoadBalancerArn": {
          "Ref": "LoadBalancer"
        },
        "Port": 9003,
        "Protocol": "TCP"
      }
    },
    "ConsoleTaskDefinition": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Volumes": [
          {
            "Name": "console-storage",
            "Host": {
              "SourcePath": "/nsolid/console"
            }
          }
        ],
        "TaskRoleArn": {
          "Ref": "TaskRole"
        },
        "ContainerDefinitions": [
          {
            "Cpu": 256,
            "Essential": "True",
            "Image": "nodesource/nsolid-console:latest",
            "Memory": 256,
            "MountPoints": [
              {
                "SourceVolume": "console-storage",
                "ContainerPath": "/var/lib/nsolid/console"
              }
            ],
            "Name": "nsolid-console",
            "PortMappings": [
              {
                "ContainerPort": "6753",
                "HostPort": "0",
                "Protocol": "tcp"
              },
              {
                "ContainerPort": "9001",
                "HostPort": "0",
                "Protocol": "tcp"
              },
              {
                "ContainerPort": "9002",
                "HostPort": "0",
                "Protocol": "tcp"
              },
              {
                "ContainerPort": "9003",
                "HostPort": "0",
                "Protocol": "tcp"
              }
            ]
          }
        ]
      }
    },
    "ConsoleService": {
      "Type": "AWS::ECS::Service",
      "DependsOn": [
        "Listener80",
        "Listener9001",
        "Listener9002",
        "Listener9003"
      ],
      "Properties": {
        "Cluster": {
          "Ref": "ClusterName"
        },
        "DeploymentConfiguration": {
          "MaximumPercent": 200,
          "MinimumHealthyPercent": 100
        },
        "DesiredCount": 1,
        "LoadBalancers": [
          {
            "ContainerName": "nsolid-console",
            "ContainerPort": "6753",
            "TargetGroupArn": {
              "Ref": "TargetGroup6753"
            }
          }
        ],
        "ServiceName": "NSolid-Console-Service",
        "TaskDefinition": {
          "Ref": "ConsoleTaskDefinition"
        }
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "DNS Name of Load Balancer",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Fn::GetAtt": [
          "LoadBalancer",
          "DNSName"
        ]
      }
    }
  }
}
