      },
      "us-west-2": {
        "AMI": "ami-2742d55f"
      },
      "ca-central-1": {
        "AMI": "ami-925bdcf6"
      },
      "eu-central-1": {
        "AMI": "ami-13d2bc7c"
      },
      "eu-west-1": {
        "AMI": "ami-53632e2a"
      },
      "eu-west-2": {
        "AMI": "ami-61dd3a06"
      },
      "eu-west-3": {
        "AMI": "ami-7b68de06"
      },
      "ap-northeast-1": {
        "AMI": "ami-fbe8a79d"
      },
      "ap-northeast-2": {
        "AMI": "ami-01fe526f"
      },
      "ap-southeast-1": {
        "AMI": "ami-2190c75d"
      },
      "ap-southeast-2": {
        "AMI": "ami-9ce929fe"
      },
      "ap-south-1": {
        "AMI": "ami-6bfea004"
      },
      "sa-east-1": {
        "AMI": "ami-b67e34da"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-e00af29d"
      },
      "us-east-2": {
        "AMI": "ami-5a45733f"
      },
      "us-west-1": {
        "AMI": "ami-421e0b22"
      },
      "us-west-2": {
        "AMI": "ami-324fd84a"
      },
      "ca-central-1": {
        "AMI": "ami-d35cdbb7"
      },
      "eu-central-1": {
        "AMI": "ami-1ed2bc71"
      },
      "eu-west-1": {
        "AMI": "ami-da632ea3"
      },
      "eu-west-2": {
        "AMI": "ami-f1df3896"
      },
      "eu-west-3": {
        "AMI": "ami-7868de05"
      },
      "ap-northeast-1": {
        "AMI": "ami-4be7a82d"
      },
      "ap-northeast-2": {
        "AMI": "ami-00fe526e"
      },
      "ap-southeast-1": {
        "AMI": "ami-cc9ec9b0"
      },
      "ap-southeast-2": {
        "AMI": "ami-ccea2aae"
      },
      "ap-south-1": {
        "AMI": "ami-7ec19f11"
      },
      "sa-east-1": {
        "AMI": "ami-437c362f"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
