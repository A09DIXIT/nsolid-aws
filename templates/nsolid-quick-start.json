      },
      "ca-central-1": {
        "AMI": "ami-0b8169aa9b1218c9d"
      },
      "eu-central-1": {
        "AMI": "ami-00f4c4960fe930a83"
      },
      "eu-west-1": {
        "AMI": "ami-00727dd6affb1384d"
      },
      "eu-west-2": {
        "AMI": "ami-01866f67b53db2f08"
      },
      "eu-west-3": {
        "AMI": "ami-0660761950edb825e"
      },
      "ap-northeast-1": {
        "AMI": "ami-018931248c41824ef"
      },
      "ap-northeast-2": {
        "AMI": "ami-0d800930f32a9a600"
      },
      "ap-southeast-1": {
        "AMI": "ami-0979e2b8b98f847c5"
      },
      "ap-southeast-2": {
        "AMI": "ami-0b6ddb3ad2ef76b1c"
      },
      "ap-south-1": {
        "AMI": "ami-03af448419e797adf"
      },
      "sa-east-1": {
        "AMI": "ami-0e7f58ec0d888cf89"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
