        "AMI": "ami-c49861b9"
      },
      "us-east-2": {
        "AMI": "ami-b25066d7"
      },
      "us-west-1": {
        "AMI": "ami-b57461d5"
      },
      "us-west-2": {
        "AMI": "ami-f8db4c80"
      },
      "ca-central-1": {
        "AMI": "ami-c251d6a6"
      },
      "eu-central-1": {
        "AMI": "ami-fa82ec95"
      },
      "eu-west-1": {
        "AMI": "ami-5babe922"
      },
      "eu-west-2": {
        "AMI": "ami-adc126ca"
      },
      "eu-west-3": {
        "AMI": "ami-2953e554"
      },
      "ap-northeast-1": {
        "AMI": "ami-c8246bae"
      },
      "ap-northeast-2": {
        "AMI": "ami-f6e84498"
      },
      "ap-southeast-1": {
        "AMI": "ami-c80c5bb4"
      },
      "ap-southeast-2": {
        "AMI": "ami-10b47472"
      },
      "ap-south-1": {
        "AMI": "ami-4da2fc22"
      },
      "sa-east-1": {
        "AMI": "ami-935d17ff"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-19a05964"
      },
      "us-east-2": {
        "AMI": "ami-805365e5"
      },
      "us-west-1": {
        "AMI": "ami-42746122"
      },
      "us-west-2": {
        "AMI": "ami-6bc55213"
      },
      "ca-central-1": {
        "AMI": "ami-8e52d5ea"
      },
      "eu-central-1": {
        "AMI": "ami-a684eac9"
      },
      "eu-west-1": {
        "AMI": "ami-b9a4e6c0"
      },
      "eu-west-2": {
        "AMI": "ami-ccc225ab"
      },
      "eu-west-3": {
        "AMI": "ami-956adce8"
      },
      "ap-northeast-1": {
        "AMI": "ami-4a236c2c"
      },
      "ap-northeast-2": {
        "AMI": "ami-2cea4642"
      },
      "ap-southeast-1": {
        "AMI": "ami-e30d5a9f"
      },
      "ap-southeast-2": {
        "AMI": "ami-20b27242"
      },
      "ap-south-1": {
        "AMI": "ami-56a5fb39"
      },
      "sa-east-1": {
        "AMI": "ami-8d5c16e1"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
