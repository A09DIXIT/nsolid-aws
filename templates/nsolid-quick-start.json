      },
      "us-west-2": {
        "AMI": "ami-17f8636f"
      },
      "ca-central-1": {
        "AMI": "ami-6eaf290a"
      },
      "eu-central-1": {
        "AMI": "ami-f64c111d"
      },
      "eu-west-1": {
        "AMI": "ami-f5db888c"
      },
      "eu-west-2": {
        "AMI": "ami-47866720"
      },
      "eu-west-3": {
        "AMI": "ami-f12c9a8c"
      },
      "ap-northeast-1": {
        "AMI": "ami-f59a9289"
      },
      "ap-northeast-2": {
        "AMI": "ami-9bbd12f5"
      },
      "ap-southeast-1": {
        "AMI": "ami-3785dc4b"
      },
      "ap-southeast-2": {
        "AMI": "ami-1966aa7b"
      },
      "ap-south-1": {
        "AMI": "ami-c9471da6"
      },
      "sa-east-1": {
        "AMI": "ami-6775220b"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-3d518940"
      },
      "us-east-2": {
        "AMI": "ami-05c4f560"
      },
      "us-west-1": {
        "AMI": "ami-835f4ee3"
      },
      "us-west-2": {
        "AMI": "ami-f0c75c88"
      },
      "ca-central-1": {
        "AMI": "ami-c8a026ac"
      },
      "eu-central-1": {
        "AMI": "ami-324c11d9"
      },
      "eu-west-1": {
        "AMI": "ami-20db8859"
      },
      "eu-west-2": {
        "AMI": "ami-5989683e"
      },
      "eu-west-3": {
        "AMI": "ami-552d9b28"
      },
      "ap-northeast-1": {
        "AMI": "ami-499a9235"
      },
      "ap-northeast-2": {
        "AMI": "ami-d7a10eb9"
      },
      "ap-southeast-1": {
        "AMI": "ami-e087de9c"
      },
      "ap-southeast-2": {
        "AMI": "ami-f864a89a"
      },
      "ap-south-1": {
        "AMI": "ami-c8471da7"
      },
      "sa-east-1": {
        "AMI": "ami-b07522dc"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
