{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid in AWS Quick Start",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-de01f9a3"
      },
      "us-east-2": {
        "AMI": "ami-3f41775a"
      },
      "us-west-1": {
        "AMI": "ami-d3180db3"
      },
      "us-west-2": {
        "AMI": "ami-5c4ed924"
      },
      "ca-central-1": {
        "AMI": "ami-e55dda81"
      },
      "eu-central-1": {
        "AMI": "ami-382b4257"
      },
      "eu-west-1": {
        "AMI": "ami-9b7835e2"
      },
      "eu-west-2": {
        "AMI": "ami-48df382f"
      },
      "eu-west-3": {
        "AMI": "ami-9856e0e5"
      },
      "ap-northeast-1": {
        "AMI": "ami-77ffb011"
      },
      "ap-northeast-2": {
        "AMI": "ami-b5fe52db"
      },
      "ap-southeast-1": {
        "AMI": "ami-829bccfe"
      },
      "ap-southeast-2": {
        "AMI": "ami-b7e828d5"
      },
      "ap-south-1": {
        "AMI": "ami-2afea045"
      },
      "sa-east-1": {
        "AMI": "ami-cd7d37a1"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-4b06fe36"
      },
      "us-east-2": {
        "AMI": "ami-d84076bd"
      },
      "us-west-1": {
        "AMI": "ami-fa1b0e9a"
      },
      "us-west-2": {
        "AMI": "ami-e74fd89f"
      },
      "ca-central-1": {
        "AMI": "ami-7f5bdc1b"
      },
      "eu-central-1": {
        "AMI": "ami-1a294075"
      },
      "eu-west-1": {
        "AMI": "ami-1c783565"
      },
      "eu-west-2": {
        "AMI": "ami-55df3832"
      },
      "eu-west-3": {
        "AMI": "ami-0a69df77"
      },
      "ap-northeast-1": {
        "AMI": "ami-aaffb0cc"
      },
      "ap-northeast-2": {
        "AMI": "ami-b4fe52da"
      },
      "ap-southeast-1": {
        "AMI": "ami-be9dcac2"
      },
      "ap-southeast-2": {
        "AMI": "ami-e9ea2a8b"
      },
      "ap-south-1": {
        "AMI": "ami-3bc19f54"
      },
      "sa-east-1": {
        "AMI": "ami-6d7f3501"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
