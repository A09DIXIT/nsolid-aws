{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid in AWS Quick Start",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-6104fc1c"
      },
      "us-east-2": {
        "AMI": "ami-fa43759f"
      },
      "us-west-1": {
        "AMI": "ami-f61e0b96"
      },
      "us-west-2": {
        "AMI": "ami-2b4fd853"
      },
      "ca-central-1": {
        "AMI": "ami-1167e075"
      },
      "eu-central-1": {
        "AMI": "ami-28d0be47"
      },
      "eu-west-1": {
        "AMI": "ami-73622f0a"
      },
      "eu-west-2": {
        "AMI": "ami-7fde3918"
      },
      "eu-west-3": {
        "AMI": "ami-0d69df70"
      },
      "ap-northeast-1": {
        "AMI": "ami-7ce1ae1a"
      },
      "ap-northeast-2": {
        "AMI": "ami-c6fd51a8"
      },
      "ap-southeast-1": {
        "AMI": "ami-c19ccbbd"
      },
      "ap-southeast-2": {
        "AMI": "ami-abe929c9"
      },
      "ap-south-1": {
        "AMI": "ami-b2c19fdd"
      },
      "sa-east-1": {
        "AMI": "ami-8a7c36e6"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-b909f1c4"
      },
      "us-east-2": {
        "AMI": "ami-1943757c"
      },
      "us-west-1": {
        "AMI": "ami-b1190cd1"
      },
      "us-west-2": {
        "AMI": "ami-2f4ed957"
      },
      "ca-central-1": {
        "AMI": "ami-8f58dfeb"
      },
      "eu-central-1": {
        "AMI": "ami-f2d1bf9d"
      },
      "eu-west-1": {
        "AMI": "ami-90632ee9"
      },
      "eu-west-2": {
        "AMI": "ami-ffdf3898"
      },
      "eu-west-3": {
        "AMI": "ami-7850e605"
      },
      "ap-northeast-1": {
        "AMI": "ami-7ee1ae18"
      },
      "ap-northeast-2": {
        "AMI": "ami-b5ff53db"
      },
      "ap-southeast-1": {
        "AMI": "ami-109dca6c"
      },
      "ap-southeast-2": {
        "AMI": "ami-d0ea2ab2"
      },
      "ap-south-1": {
        "AMI": "ami-48ffa127"
      },
      "sa-east-1": {
        "AMI": "ami-b27f35de"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
