{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid in AWS Quick Start",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-f4798189"
      },
      "us-east-2": {
        "AMI": "ami-63437506"
      },
      "us-west-1": {
        "AMI": "ami-2f180d4f"
      },
      "us-west-2": {
        "AMI": "ami-6e4add16"
      },
      "ca-central-1": {
        "AMI": "ami-ec59de88"
      },
      "eu-central-1": {
        "AMI": "ami-222f464d"
      },
      "eu-west-1": {
        "AMI": "ami-9a773ae3"
      },
      "eu-west-2": {
        "AMI": "ami-8ed037e9"
      },
      "eu-west-3": {
        "AMI": "ami-1b6bdd66"
      },
      "ap-northeast-1": {
        "AMI": "ami-73fcb315"
      },
      "ap-northeast-2": {
        "AMI": "ami-bcff53d2"
      },
      "ap-southeast-1": {
        "AMI": "ami-b49acdc8"
      },
      "ap-southeast-2": {
        "AMI": "ami-88ea2aea"
      },
      "ap-south-1": {
        "AMI": "ami-66ffa109"
      },
      "sa-east-1": {
        "AMI": "ami-637c360f"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-ee7f8793"
      },
      "us-east-2": {
        "AMI": "ami-77407612"
      },
      "us-west-1": {
        "AMI": "ami-991b0ef9"
      },
      "us-west-2": {
        "AMI": "ami-2b49de53"
      },
      "ca-central-1": {
        "AMI": "ami-c95addad"
      },
      "eu-central-1": {
        "AMI": "ami-942b42fb"
      },
      "eu-west-1": {
        "AMI": "ami-7b753802"
      },
      "eu-west-2": {
        "AMI": "ami-7bdc3b1c"
      },
      "eu-west-3": {
        "AMI": "ami-7368de0e"
      },
      "ap-northeast-1": {
        "AMI": "ami-7afbb41c"
      },
      "ap-northeast-2": {
        "AMI": "ami-12f8547c"
      },
      "ap-southeast-1": {
        "AMI": "ami-0499ce78"
      },
      "ap-southeast-2": {
        "AMI": "ami-12ec2c70"
      },
      "ap-south-1": {
        "AMI": "ami-8afca2e5"
      },
      "sa-east-1": {
        "AMI": "ami-df7d37b3"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
