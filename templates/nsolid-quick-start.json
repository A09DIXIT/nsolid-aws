        "AMI": "ami-1199e46e"
      },
      "us-east-2": {
        "AMI": "ami-e5b08f80"
      },
      "us-west-1": {
        "AMI": "ami-f6ee0b95"
      },
      "us-west-2": {
        "AMI": "ami-faf9be82"
      },
      "ca-central-1": {
        "AMI": "ami-14be3d70"
      },
      "eu-central-1": {
        "AMI": "ami-b417215f"
      },
      "eu-west-1": {
        "AMI": "ami-01141578"
      },
      "eu-west-2": {
        "AMI": "ami-3cda355b"
      },
      "eu-west-3": {
        "AMI": "ami-853889f8"
      },
      "ap-northeast-1": {
        "AMI": "ami-f0d3128f"
      },
      "ap-northeast-2": {
        "AMI": "ami-dc04afb2"
      },
      "ap-southeast-1": {
        "AMI": "ami-2ec6fd52"
      },
      "ap-southeast-2": {
        "AMI": "ami-a94c91cb"
      },
      "ap-south-1": {
        "AMI": "ami-6a183105"
      },
      "sa-east-1": {
        "AMI": "ami-c5075fa9"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-1499e46b"
      },
      "us-east-2": {
        "AMI": "ami-fbb18e9e"
      },
      "us-west-1": {
        "AMI": "ami-c5e80da6"
      },
      "us-west-2": {
        "AMI": "ami-4efabd36"
      },
      "ca-central-1": {
        "AMI": "ami-17be3d73"
      },
      "eu-central-1": {
        "AMI": "ami-4d1422a6"
      },
      "eu-west-1": {
        "AMI": "ami-861716ff"
      },
      "eu-west-2": {
        "AMI": "ami-d6da35b1"
      },
      "eu-west-3": {
        "AMI": "ami-2f3c8d52"
      },
      "ap-northeast-1": {
        "AMI": "ami-b7d213c8"
      },
      "ap-northeast-2": {
        "AMI": "ami-e312b98d"
      },
      "ap-southeast-1": {
        "AMI": "ami-c7c0fbbb"
      },
      "ap-southeast-2": {
        "AMI": "ami-554e9337"
      },
      "ap-south-1": {
        "AMI": "ami-7119301e"
      },
      "sa-east-1": {
        "AMI": "ami-505b033c"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
