{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid in AWS Quick Start",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-3d18e040"
      },
      "us-east-2": {
        "AMI": "ami-63457306"
      },
      "us-west-1": {
        "AMI": "ami-311e0b51"
      },
      "us-west-2": {
        "AMI": "ami-e859ce90"
      },
      "ca-central-1": {
        "AMI": "ami-555bdc31"
      },
      "eu-central-1": {
        "AMI": "ami-4ad2bc25"
      },
      "eu-west-1": {
        "AMI": "ami-e56b269c"
      },
      "eu-west-2": {
        "AMI": "ami-f8de399f"
      },
      "eu-west-3": {
        "AMI": "ami-3569df48"
      },
      "ap-northeast-1": {
        "AMI": "ami-5cd59a3a"
      },
      "ap-northeast-2": {
        "AMI": "ami-56e24e38"
      },
      "ap-southeast-1": {
        "AMI": "ami-5d95c221"
      },
      "ap-southeast-2": {
        "AMI": "ami-efe7278d"
      },
      "ap-south-1": {
        "AMI": "ami-e4c19f8b"
      },
      "sa-east-1": {
        "AMI": "ami-3c793350"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-a318e0de"
      },
      "us-east-2": {
        "AMI": "ami-e942748c"
      },
      "us-west-1": {
        "AMI": "ami-2f1c094f"
      },
      "us-west-2": {
        "AMI": "ami-7c46d104"
      },
      "ca-central-1": {
        "AMI": "ami-5259de36"
      },
      "eu-central-1": {
        "AMI": "ami-b2d5bbdd"
      },
      "eu-west-1": {
        "AMI": "ami-e9692490"
      },
      "eu-west-2": {
        "AMI": "ami-60df3807"
      },
      "eu-west-3": {
        "AMI": "ami-3469df49"
      },
      "ap-northeast-1": {
        "AMI": "ami-00d89766"
      },
      "ap-northeast-2": {
        "AMI": "ami-9ae34ff4"
      },
      "ap-southeast-1": {
        "AMI": "ami-a195c2dd"
      },
      "ap-southeast-2": {
        "AMI": "ami-b3e727d1"
      },
      "ap-south-1": {
        "AMI": "ami-69c59b06"
      },
      "sa-east-1": {
        "AMI": "ami-907e34fc"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
