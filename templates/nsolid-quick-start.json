{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid in AWS Quick Start",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-c34607bc"
      },
      "us-east-2": {
        "AMI": "ami-fd0b3598"
      },
      "us-west-1": {
        "AMI": "ami-7ad83c19"
      },
      "us-west-2": {
        "AMI": "ami-24bdfe5c"
      },
      "ca-central-1": {
        "AMI": "ami-ce0281aa"
      },
      "eu-central-1": {
        "AMI": "ami-183605f3"
      },
      "eu-west-1": {
        "AMI": "ami-4bbcb132"
      },
      "eu-west-2": {
        "AMI": "ami-31886656"
      },
      "eu-west-3": {
        "AMI": "ami-872f9efa"
      },
      "ap-northeast-1": {
        "AMI": "ami-2164a85e"
      },
      "ap-northeast-2": {
        "AMI": "ami-e7983289"
      },
      "ap-southeast-1": {
        "AMI": "ami-ab7572d7"
      },
      "ap-southeast-2": {
        "AMI": "ami-99cd12fb"
      },
      "ap-south-1": {
        "AMI": "ami-1ab69e75"
      },
      "sa-east-1": {
        "AMI": "ami-15570c79"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-c34607bc"
      },
      "us-east-2": {
        "AMI": "ami-fd0b3598"
      },
      "us-west-1": {
        "AMI": "ami-7ad83c19"
      },
      "us-west-2": {
        "AMI": "ami-24bdfe5c"
      },
      "ca-central-1": {
        "AMI": "ami-ce0281aa"
      },
      "eu-central-1": {
        "AMI": "ami-183605f3"
      },
      "eu-west-1": {
        "AMI": "ami-4bbcb132"
      },
      "eu-west-2": {
        "AMI": "ami-31886656"
      },
      "eu-west-3": {
        "AMI": "ami-872f9efa"
      },
      "ap-northeast-1": {
        "AMI": "ami-2164a85e"
      },
      "ap-northeast-2": {
        "AMI": "ami-e7983289"
      },
      "ap-southeast-1": {
        "AMI": "ami-ab7572d7"
      },
      "ap-southeast-2": {
        "AMI": "ami-99cd12fb"
      },
      "ap-south-1": {
        "AMI": "ami-1ab69e75"
      },
      "sa-east-1": {
        "AMI": "ami-15570c79"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
