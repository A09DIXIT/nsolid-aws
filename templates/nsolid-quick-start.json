      },
      "ca-central-1": {
        "AMI": "ami-0cca265a15ef597a1"
      },
      "eu-central-1": {
        "AMI": "ami-096e73a1c8d4e55c5"
      },
      "eu-west-1": {
        "AMI": "ami-06cbfda7e1356958f"
      },
      "eu-west-2": {
        "AMI": "ami-029230a5d642e2ad3"
      },
      "eu-west-3": {
        "AMI": "ami-0ffa6319cf4ba7705"
      },
      "ap-northeast-1": {
        "AMI": "ami-016d261ddb7c92d39"
      },
      "ap-northeast-2": {
        "AMI": "ami-02c08ff49dca1140e"
      },
      "ap-southeast-1": {
        "AMI": "ami-09b9af9a7f6d2c12a"
      },
      "ap-southeast-2": {
        "AMI": "ami-0c8d6a6e5c4784acf"
      },
      "ap-south-1": {
        "AMI": "ami-070840ddd8b9fe784"
      },
      "sa-east-1": {
        "AMI": "ami-0673453583398f141"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
