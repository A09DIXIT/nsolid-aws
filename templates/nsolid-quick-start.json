{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid in AWS Quick Start",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-5a7ec525"
      },
      "us-east-2": {
        "AMI": "ami-69bf8d0c"
      },
      "us-west-1": {
        "AMI": "ami-a47f60c4"
      },
      "us-west-2": {
        "AMI": "ami-20512558"
      },
      "ca-central-1": {
        "AMI": "ami-c5d252a1"
      },
      "eu-central-1": {
        "AMI": "ami-a0cded4b"
      },
      "eu-west-1": {
        "AMI": "ami-31ddf548"
      },
      "eu-west-2": {
        "AMI": "ami-f2f61495"
      },
      "eu-west-3": {
        "AMI": "ami-28972655"
      },
      "ap-northeast-1": {
        "AMI": "ami-c050b3bf"
      },
      "ap-northeast-2": {
        "AMI": "ami-ab63cac5"
      },
      "ap-southeast-1": {
        "AMI": "ami-73a78f0f"
      },
      "ap-southeast-2": {
        "AMI": "ami-4de5312f"
      },
      "ap-south-1": {
        "AMI": "ami-70e6c61f"
      },
      "sa-east-1": {
        "AMI": "ami-debceeb2"
      }
    },
    "RuntimeAMI": {
      "us-east-1": {
        "AMI": "ami-c078c3bf"
      },
      "us-east-2": {
        "AMI": "ami-fcbe8c99"
      },
      "us-west-1": {
        "AMI": "ami-a76e71c7"
      },
      "us-west-2": {
        "AMI": "ami-29502451"
      },
      "ca-central-1": {
        "AMI": "ami-4fd4542b"
      },
      "eu-central-1": {
        "AMI": "ami-96c9e97d"
      },
      "eu-west-1": {
        "AMI": "ami-e3ddf59a"
      },
      "eu-west-2": {
        "AMI": "ami-a3f311c4"
      },
      "eu-west-3": {
        "AMI": "ami-ba9120c7"
      },
      "ap-northeast-1": {
        "AMI": "ami-0557b47a"
      },
      "ap-northeast-2": {
        "AMI": "ami-0463ca6a"
      },
      "ap-southeast-1": {
        "AMI": "ami-6ea78f12"
      },
      "ap-southeast-2": {
        "AMI": "ami-48e5312a"
      },
      "ap-south-1": {
        "AMI": "ami-1ee8c871"
      },
      "sa-east-1": {
        "AMI": "ami-dbbceeb7"
      }
    }
  },
  "Parameters": {
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "RuntimeSubnet": {
      "Description": "Subnet ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "RuntimeVPC": {
      "Description": "VPC ID to run N|Solid Runtime in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "RuntimeSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Runtime",
        "GroupDescription": "Security Group for NSolid Runtime",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          }
        ],
        "VpcId": {
          "Ref": "RuntimeVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "RuntimeServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "RuntimeSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "30"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "RuntimeAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "RuntimeSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "RuntimeSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Runtime"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "RuntimeEIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "InstanceId": {
          "Ref": "RuntimeServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Ref": "ConsoleEIP"
      }
    },
    "RuntimeIP": {
      "Description": "Public IP Address of the N|Solid Runtime Server",
      "Export": {
        "Name": "nsolid-runtime-ip"
      },
      "Value": {
        "Ref": "RuntimeEIP"
      }
    }
  }
}
