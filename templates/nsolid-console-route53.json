{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Run N|Solid Console in AWS",
  "Mappings": {
    "ConsoleAMI": {
      "ap-northeast-1": {
        "AMI": "ami-58ef533e"
      },
      "ap-southeast-1": {
        "AMI": "ami-2e98ce4d"
      },
      "ap-southeast-2": {
        "AMI": "ami-4dc42e2f"
      },
      "ca-central-1": {
        "AMI": "ami-a8843fcc"
      },
      "eu-central-1": {
        "AMI": "ami-95098bfa"
      },
      "eu-west-1": {
        "AMI": "ami-dfcd7ba6"
      },
      "eu-west-2": {
        "AMI": "ami-f0e9f694"
      },
      "us-east-1": {
        "AMI": "ami-2fb02555"
      },
      "us-east-2": {
        "AMI": "ami-d4ddf3b1"
      },
      "us-west-1": {
        "AMI": "ami-e0ab9380"
      },
      "us-west-2": {
        "AMI": "ami-0eda0676"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Console instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    },
    "Route53Zone": {
      "Description": "Route53 Hosted Zone ID of DNS Record",
      "Type": "AWS::Route53::HostedZone::Id"
    },
    "ConsoleURL": {
      "Description": "Domain Name for N|Solid Console",
      "Type": "String"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m3.xlarge",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    },
    "ConsoleDomain": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "Comment": "N|Solid Console",
        "HostedZoneId": {
          "Ref": "Route53Zone"
        },
        "Name": {
          "Ref": "ConsoleURL"
        },
        "ResourceRecords": [
          {
            "Fn::If": [
              "PublicAccess",
              {
                "Ref": "ConsoleEIP"
              },
              {
                "Fn::GetAtt": [
                  "ConsoleServer",
                  "PrivateIp"
                ]
              }
            ]
          }
        ],
        "TTL": "900",
        "Type": "A"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "Public IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "ConsoleEIP"
          },
          {
            "Fn::GetAtt": [
              "ConsoleServer",
              "PrivateIp"
            ]
          }
        ]
      }
    },
    "ConsoleURL": {
      "Description": "URL of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-url"
      },
      "Value": {
        "Ref": "ConsoleDomain"
      }
    }
  }
}
