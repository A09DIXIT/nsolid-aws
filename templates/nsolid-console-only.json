{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "N|Solid Console in AWS",
  "Mappings": {
    "ConsoleAMI": {
      "us-east-1": {
        "AMI": "ami-07e787fc4c21b8504"
      },
      "us-east-2": {
        "AMI": "ami-0a60cb18e519c7aa7"
      },
      "us-west-1": {
        "AMI": "ami-07a34706e2c113e83"
      },
      "us-west-2": {
        "AMI": "ami-0fa25834de97896d6"
      },
      "ca-central-1": {
        "AMI": "ami-01d506b931f554a5e"
      },
      "eu-central-1": {
        "AMI": "ami-0a410b3506f7ab08c"
      },
      "eu-west-1": {
        "AMI": "ami-05ee2fa9f36567d97"
      },
      "eu-west-2": {
        "AMI": "ami-0a3666faf80318677"
      },
      "eu-west-3": {
        "AMI": "ami-028df5d6da70631a4"
      },
      "ap-northeast-1": {
        "AMI": "ami-037400b331afae179"
      },
      "ap-northeast-2": {
        "AMI": "ami-0fac6b45e8ec3e94b"
      },
      "ap-southeast-1": {
        "AMI": "ami-013bcca3a45fed21b"
      },
      "ap-southeast-2": {
        "AMI": "ami-06e0ef07697a0b176"
      },
      "ap-south-1": {
        "AMI": "ami-0d2880caeb9cf6bec"
      },
      "sa-east-1": {
        "AMI": "ami-0bdc27f8026fcc59e"
      }
    }
  },
  "Parameters": {
    "PublicAccess": {
      "AllowedValues": [
        "Enabled",
        "Disabled"
      ],
      "ConstraintDescription": "Must be either Enabled or Disabled",
      "Description": "If Enabled, the Console instance will get an Elastic IP",
      "Default": "Disabled",
      "Type": "String"
    },
    "SSHKey": {
      "Description": "Amazon EC2 Key Pair",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "ConsoleSubnet": {
      "Description": "Subnet ID to run N|Solid Console in",
      "Type": "AWS::EC2::Subnet::Id"
    },
    "ConsoleVPC": {
      "Description": "VPC ID to run N|Solid Console in",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Conditions": {
    "PublicAccess": {
      "Fn::Equals": [
        {
          "Ref": "PublicAccess"
        },
        "Enabled"
      ]
    }
  },
  "Resources": {
    "ConsoleSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "NSolid-Console",
        "GroupDescription": "Security Group for NSolid Console",
        "SecurityGroupIngress": [
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80"
          },
          {
            "CidrIp": "0.0.0.0/0",
            "IpProtocol": "tcp",
            "FromPort": "9001",
            "ToPort": "9003"
          }
        ],
        "VpcId": {
          "Ref": "ConsoleVPC"
        }
      }
    },
    "ConsoleServer": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": "ConsoleSecurityGroup",
      "Properties": {
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": "50"
            }
          }
        ],
        "ImageId": {
          "Fn::FindInMap": [
            "ConsoleAMI",
            {
              "Ref": "AWS::Region"
            },
            "AMI"
          ]
        },
        "InstanceType": "m5.large",
        "KeyName": {
          "Ref": "SSHKey"
        },
        "SecurityGroupIds": [
          {
            "Ref": "ConsoleSecurityGroup"
          }
        ],
        "SubnetId": {
          "Ref": "ConsoleSubnet"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "N|Solid-Console"
          }
        ]
      }
    },
    "ConsoleEIP": {
      "Type": "AWS::EC2::EIP",
      "Condition": "PublicAccess",
      "Properties": {
        "InstanceId": {
          "Ref": "ConsoleServer"
        },
        "Domain": "vpc"
      }
    }
  },
  "Outputs": {
    "ConsoleIP": {
      "Description": "IP Address of the N|Solid Console Server",
      "Export": {
        "Name": "nsolid-console-ip"
      },
      "Value": {
        "Fn::If": [
          "PublicAccess",
          {
            "Ref": "ConsoleEIP"
          },
          {
            "Fn::GetAtt": [
              "ConsoleServer",
              "PrivateIp"
            ]
          }
        ]
      }
    }
  }
}
